{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "namespaceStorageAccountName": {
      "type": "string",
      "metadata": {
          "description": "Name of the Namespace Storage Account"
      }
    },
    "scaleoutStorageAccountName0": {
      "type": "string",
      "metadata": {
          "description": "Name of the Scaleout Storage Account #0"
      }
    },
    "scaleoutStorageAccountName1": {
      "type": "string",
      "metadata": {
          "description": "Name of the Scaleout Storage Account #1"
      }
    },
    "scaleoutStorageAccountName2": {
      "type": "string",
      "metadata": {
          "description": "Name of the Scaleout Storage Account #2"
      }
    },
    "scaleoutStorageAccountName3": {
      "type": "string",
      "metadata": {
          "description": "Name of the Scaleout Storage Account #3"
      }
    },
    "storageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
    },
    "storageLocation": {
      "type": "string",
    },
    "redisCacheName": {
      "type": "string",
    },
    "redisCacheLocation": {
      "type": "string",
    },
    "redisCacheSKU": {
      "type": "string",
      "defaultValue": "Basic"
    },
    "redisCacheFamily": {
      "type": "string",
      "defaultValue": "C"
    },
    "redisCacheCapacity": {
      "type": "int",
      "defaultValue": 1
    },
    "redisCacheVersion": {
      "type": "string",
      "defaultValue": "2.8"
    }
  },
  "resources": [
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('namespaceStorageAccountName')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('storageLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('scaleoutStorageAccountName0')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('storageLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('scaleoutStorageAccountName1')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('storageLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('scaleoutStorageAccountName2')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('storageLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Storage/storageAccounts",
      "name": "[parameters('scaleoutStorageAccountName3')]",
      "apiVersion": "2015-05-01-preview",
      "location": "[parameters('storageLocation')]",
      "properties": {
        "accountType": "[parameters('storageAccountType')]"
      }
    },
    {
      "type": "Microsoft.Cache/Redis",
      "name": "[parameters('redisCacheName')]",
      "apiVersion": "2014-04-01-preview",
      "location": "[parameters('redisCacheLocation')]",
      "properties": {
        "sku": {
          "name": "[parameters('redisCacheSKU')]",
          "family": "[parameters('redisCacheFamily')]",
          "capacity": "[parameters('redisCacheCapacity')]"
        },
        "redisVersion": "[parameters('redisCacheVersion')]",
        "maxMemoryPolicy": "AllKeysLRU",
        "enableNonSslPort": true
      }
    }
  ]
}
